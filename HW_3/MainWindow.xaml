<Window x:Class="HW_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>
                <Label HorizontalAlignment="Center" FontWeight="Bold" Content="Кубы чисел"/>

                <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Нижняя граница:" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding LowerLimit, UpdateSourceTrigger=PropertyChanged}"  Margin="10,0,0,0" Width="100" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Верхняя граница:" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding HighLimit, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,0,0" Width="100" VerticalAlignment="Center"/>
                </StackPanel>

                <Border Margin="0,15,0,0" Background="WhiteSmoke" CornerRadius="3">
                    <TextBlock Text="{Binding CubeTextBlock}" Width="300" Height="150" Margin="5" TextWrapping="Wrap"/>
                </Border>

                <StackPanel Margin="0,15,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding StartCubeCommand}" Content="Начать" Margin="5" Width="80" Height="30"/>
                    <Button Command="{Binding PauseCubeCommand}" Content="Пауза/Возобновить" Margin="5" Width="120" Height="30"/>
                    <Button Command="{Binding StopCubeCommand}" Content="Сброс" Margin="5" Width="80" Height="30"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <Border Grid.Column="1" Margin="5" Padding="10" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>
                <Label HorizontalAlignment="Center" FontWeight="Bold" Content="Факториалы чисел"/>

                <StackPanel Margin="0,10,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Введите число:" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding LimitNumber}" Margin="0,5,0,0" Width="100" HorizontalAlignment="Center"/>
                    <TextBlock Text="до какого будет рассчитываться факториалы" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Width="200"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Border Margin="0,15,0,0" Background="WhiteSmoke" CornerRadius="3">
                    <TextBlock  Text="{Binding FactorialTextBlock}" Width="300" Height="150" Margin="5" TextWrapping="Wrap"/>
                </Border>

                <StackPanel Margin="0,15,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding StartFactorialCommand}" Content="Начать" Margin="5" Width="80" Height="30"/>
                    <Button Command="{Binding PauseFactorialCommand}" Content="Пауза/Возобновить" Margin="5" Width="120" Height="30"/>
                    <Button Command="{Binding StopFactorialCommand}" Content="Сброс" Margin="5" Width="80" Height="30"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>